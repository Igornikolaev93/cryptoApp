# ========== СЕРВЕР ==========
PORT=10000
NODE_ENV=production

# ========== БАЗА ДАННЫХ RENDER ==========
# Используйте ТОЛЬКО DATABASE_URL для Render!
DATABASE_URL=postgresql://cryptoapp_user:password@dpg-xxxxxx-a.oregon-postgres.render.com:5432/cryptoapp?sslmode=require

# ========== JWT АУТЕНТИФИКАЦИЯ ==========
JWT_SECRET=your_production_super_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this_too
JWT_REFRESH_EXPIRES_IN=7d

# ========== БЕЗОПАСНОСТЬ ==========
CORS_ORIGIN=https://cryptoapp-frontend.onrender.com,https://cryptoapp-frontends.onrender.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ========== ЛОГИРОВАНИЕ ==========
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ========== ПРОЧИЕ НАСТРОЙКИ ==========
APP_NAME=CryptoApp
APP_VERSION=1.0.0
API_PREFIX=/api